{
    "include": [
        "src/**/*"
    ],

    "compilerOptions": {
        "isolatedModules" : true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictFunctionTypes": false, 

        "strictPropertyInitialization": false, 
        "downlevelIteration": true,
        "target": "es5",
        "lib": ["dom", "es5", "es2015.iterable", "es2015"],
        "sourceMap": true,
        "outDir": "build",
        "module": "es6",
        "baseUrl": "."
    }
}

